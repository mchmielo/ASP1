@model MateuszChmielowskiLab5.Models.Movie
<div class="modal fade" id="edit_movie_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Edytuj film</h4>
            </div>
            @using (Html.BeginForm("UpdateMovie", "Movie", FormMethod.Post))
            {
                <div class="modal-body table-responsive">
                    <table class="table table-striped table-hover">

                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(Model => Model.Name)

                                </th>
                                <th>
                                    Data:
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <input id="movieID" type="hidden" name="Id" />
                                    <input id="movieName" type="text" name="Name" style="max-width:200px; height:50px" />
                                </td>
                                <td>
                                    <input id="movieDate" type="date" name="ReleaseDate" style="height:50px" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-success" value="Zapisz zmiany" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Anuluj</button>
                </div>
            }
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->