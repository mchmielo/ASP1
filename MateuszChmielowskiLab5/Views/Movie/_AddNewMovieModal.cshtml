@model MateuszChmielowskiLab5.Models.Movie
<div class="modal fade" id="add_movie_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Dodaj nowy film</h4>
            </div>
            <div class="modal-body table-responsive">
                <table class="table table-striped table-hover">
                    @using (Html.BeginForm("AddMovie", "Movie", FormMethod.Post))
                    {
                        <thead>
                            <tr>
                                <th class="col-md-2">
                                    @Html.DisplayNameFor(Model => Model.Name)
                                    
                                </th>
                                <th class ="col-md-3">
                                    Data:
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.EditorFor(Model => Model.Name)
                                    
                                </td>
                                <td>
                                    <input type="date" name="ReleaseDate" value="@DateTime.Now.ToShortDateString()" />
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn-success" value="Dodaj" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->