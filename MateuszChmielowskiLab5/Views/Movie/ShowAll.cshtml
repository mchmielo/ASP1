@model List<MateuszChmielowskiLab5.Models.Movie>
@{
    ViewBag.Title = "ShowAll";
}

<h2>Lista wszystkich filmów</h2>
<div>
    @for (int i = 0; i < Model.Count; i++)
    {
        <p>Nazwa: <b>@Model[i].Name</b></p>
        <p> Data: <b>@Model[i].ReleaseDate.ToShortDateString()</b></p>
        @Html.ActionLink("Usuń", "DeleteById", new { @id = @Model[i].Id })
        @Html.ActionLink("Edytuj", "UpdateById", new { @id = @Model[i].Id })
    }
</div>